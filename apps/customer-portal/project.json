{
  "name": "customer-portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/customer-portal/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/customer-portal",
        "webpackConfig": "apps/customer-portal/webpack.config.cjs"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": []
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": []
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "customer-portal:build",
        "port": 8081
      },
      "configurations": {
        "development": {
          "buildTarget": "customer-portal:build:development"
        },
        "production": {
          "buildTarget": "customer-portal:build:production"
        }
      }
    },
    "preview": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "customer-portal:build",
        "port": 8081
      },
      "configurations": {
        "development": {
          "buildTarget": "customer-portal:build:development"
        },
        "production": {
          "buildTarget": "customer-portal:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/customer-portal/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["type:app", "scope:customer-portal"]
}
